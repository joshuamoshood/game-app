//- game-card.pug
mixin gameCard(game)
    .col-xl-2.col-lg-3.col-md-4.pl-md-3.col-sm-6.px-2.px-md-4.mb-3
        .card.game-card
            a(href=`/games/${game.slug}`)
                .poster.relative.bg-gray-600(style="padding-bottom: 135%;")
                    if game.cover
                        img.card-img-top.img-fluid.img-rounded.absolute.h-100(src=game.cover.url, alt=game.name)

                    .rating.card-rating.absolute.cw-6.ch-6.ch-sm-8.cw-sm-8.border-radius-50.bg-light-purple.text-center.d-flex.align-items-center.justify-content-center.js-pg-rating(data-rating=game.rating)
                        //- Optional: Add a rating value or other content here if needed

            .card-body.mt-3
                a(href=`/games/${game.slug}`)
                    h6.card-title.text-gray-300.clamp.two-lines #{game.name}
                p.card-text.text-gray-500.clamp.one-line #{game.platforms_string}